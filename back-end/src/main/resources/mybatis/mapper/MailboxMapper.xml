<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.nextLearnServer.mapper.MailboxMapper">
    <insert id="saveMailbox" parameterType="com.example.nextLearnServer.pojo.Mailbox">
        insert into mailbox(name, StuId, theme, content)
        values(#{name},#{StuId},#{theme},#{content});
    </insert>

    <select id="queryAllMailbox" resultType="com.example.nextLearnServer.pojo.Mailbox">
        select * from mailbox;
    </select>


</mapper>