<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.nextLearnServer.mapper.ConversationMapper">
    <select id="selectAllCourses" resultType="com.example.nextLearnServer.pojo.Conversation">
        select * from course;
    </select>

    <select id="selectCoursesByTeacherId" resultType="com.example.nextLearnServer.pojo.Conversation">
        select * from course where teacherId = #{teacherId};
    </select>

    <select id="selectCoursesByStudentId" resultType="com.example.nextLearnServer.pojo.Conversation">
        select * from course where studentId = #{studentId};
    </select>

    <select id="selectCoursesByName" resultType="com.example.nextLearnServer.pojo.Conversation">
        select * from course where name like CONCAT('%', #{keyword}, '%');
    </select>
</mapper>