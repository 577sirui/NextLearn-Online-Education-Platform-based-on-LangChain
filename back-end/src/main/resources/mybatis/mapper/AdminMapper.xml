<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.nextLearnServer.mapper.AdminMapper">
    <insert id="saveRegister" parameterType="com.example.nextLearnServer.pojo.Sign">
        insert into admin(id, name, phone, password, create_time)
        values(
            #{id},
            #{name},
            #{phone},
            #{password},
            now()
        )
    </insert>

    <select id="getPassword" resultType="java.lang.String" parameterType="java.lang.String">
        select password from admin where phone = #{phone};
    </select>
</mapper>